<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_header"
        android:layout_width="match_parent"
        android:background="@color/colorTextDark"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_filter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_menu_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/bebasnue_bold"
            android:gravity="center_vertical"
            android:text="@string/filter"
            android:textColor="@color/tab_selected_color"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/radio_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_header">

        <RadioButton
            android:id="@+id/radio_all"
            android:fontFamily="@font/bebasneue_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/all" />

        <RadioButton
            android:id="@+id/radio_private"
            android:fontFamily="@font/bebasneue_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repo_private" />

        <RadioButton
            android:id="@+id/radio_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue_book"
            android:text="@string/repo_public" />

        <RadioButton
            android:id="@+id/radio_forks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue_book"
            android:text="@string/forks" />
 <RadioButton
            android:id="@+id/radio_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue_book"
            android:text="@string/source" />

        <RadioButton
            android:id="@+id/radio_member"
            android:layout_width="match_parent"
            android:fontFamily="@font/bebasneue_book"
            android:layout_height="wrap_content"
            android:text="@string/member" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>